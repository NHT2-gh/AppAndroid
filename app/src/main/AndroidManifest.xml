            android:name=".StaffNavigationMenuActivity"
            android:exported="true" />
        <activity
            android:name=".StaffOderListActivity"
            android:exported="true" />
        <activity
            android:name=".StaffOrderDetailActivity"
            android:exported="true" />
        <activity
            android:name=".AdminSaleStatisticActivity"
            android:exported="true" />
        <activity
            android:name=".AdminProductStatisticsActivity"
            android:exported="true" />
        <activity
            android:name=".UserDeliveryProcessActivity"
            android:exported="true" />
        <activity
            android:name=".UserProfileActivity"
            android:exported="true" />
        <activity
            android:name=".UserOrderBuyNowActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ProductDetailActivity"
            android:exported="true"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".Actionbar"
